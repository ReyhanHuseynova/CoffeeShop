@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-11">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Reservation Table</h6>
        <div class="d-flex justify-content-end" style="margin-bottom:5px">
            <a asp-action="Create" class="btn btn-info">Create</a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Date</th>
                    <th scope="col">Person Count</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                  
                      

                  
                 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ReservationID</th>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.PersonCount</td>
                        <td>
                            @if (item.IsDeactive)
                            {
                                <span class="text-danger">Passive</span>
                            }
                            else
                            {
                                <span class="text-success">Active</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-end">
                                <div style="margin-right:5px">
                                    <a asp-action="Update" asp-route-id="@item.ReservationID" class="btn btn-light">Update</a>
                                </div>

                                <div style="margin-right:5px">
                                    <a asp-action="Delete" asp-route-id="@item.ReservationID" class="btn btn-danger">Delete</a>
                                </div>
                               @*  if (item.IsDeactive)
                                {
                                    <div style="margin-right:5px">
                                        <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger">Activate</a>
                                    </div>
                                }
                                else
                                {
                                    <div style="margin-right:5px">
                                        <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-success">Deactivate</a>
                                    </div>
                                } *@
                            </div>

                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>




