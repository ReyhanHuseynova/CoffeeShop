@using EntityLayer.Concrete
@model Reservation
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Create Category</h6>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Name" for="exampleInputEmail1" class="form-label"></label>
                        <input asp-for="Name" class="form-control" 
                               aria-describedby="emailHelp">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Surname" for="exampleInputEmail1" class="form-label"></label>
                        <input asp-for="Surname" class="form-control" 
                               aria-describedby="emailHelp">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Date" for="exampleInputEmail1" class="form-label"></label>
                        <input asp-for="Date" class="form-control" 
                               aria-describedby="emailHelp">
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PersonCount" for="exampleInputEmail1" class="form-label"></label>
                        <input asp-for="PersonCount" class="form-control"
                               aria-describedby="emailHelp">
                        <span asp-validation-for="PersonCount" class="text-danger"></span>
                    </div>
                  


                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>

    </div>
</div>


