@using EntityLayer.Concrete
@model List<Slider>
<div class="container-fluid p-0 mb-5">
    <div id="blog-carousel" class="carousel slide overlay-bottom" data-ride="carousel">
        <div class="carousel-inner">
            @for (var i = 0; i < Model.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img class="w-100" src="~/img/@Model[i].Image" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <h2 class="text-primary font-weight-medium m-0">@Model[i].ServingText</h2>
                        <h1 class="display-1 text-white m-0">@Model[i].CoffeeHeading</h1>
                        <h2 class="text-white m-0">* @Model[i].SinceText *</h2>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#blog-carousel" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#blog-carousel" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</div>


